@page "/clanCreate"
@inject IClan clan
@inject NavigationManager NavManager

<h3>Create A Clan</h3>
<EditForm Model="@clanModel" OnValidSubmit="CreateClan">
    @*For at vores beskreder fra vores validering kan vises*@
    <ValidationSummary />
    @*For at vores validering på modelleren kan bruges skal vi tilføje følgende*@
    <DataAnnotationsValidator />
    <div class="form-control">
        ClanName <input type="text" @bind="clanModel.ClanName" />
    </div>
    <div class="form-control">
        SamuraiID <input type="text" @bind="clanModel.SamuraiID" />
    </div>
    <button type="submit">Confirm</button>
    
</EditForm>
<button @onclick="Back">Back</button>

@code {
    /// <summary>
    /// vores tilbage knap
    /// </summary>
    public void Back()
    {
        //skift vindue
        NavManager.NavigateTo("/clan");
    }

    //istansiere vores model
    ClanModel clanModel = new();

    /// <summary>
    /// vores indsæt metode
    /// </summary>
    public void CreateClan()
    {
        try
        {
            //kør metode
            clan.InsertClan(clanModel);
            //skift vindue
            NavManager.NavigateTo("clan");
        }
        catch
        {
            //bygger vores navigateTo ordenligt op
            string infostring = $"{(clanModel.SamuraiID).ToString()} is not an existent Samurai ID";
            string currentModel = "Clan Model";
            string CurrentId = "";
            string url = "clanCreate";

            //skift vindue
            NavManager.NavigateTo($"/errorIDPage/{url}/{CurrentId}/{currentModel}/{infostring}");
        }
    }
}
