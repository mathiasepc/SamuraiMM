@page "/clan"
@inject IClan clan
@inject NavigationManager NavManager

<div class="topSection">
    <h3>List of clans</h3>
    <button @onclick="CreateClan">Add clan</button>
</div>

<table>
    <thead>
        <tr>
            <td>Clan Name</td>
            <td>Samurai ID</td>
            <td>Functions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var clan in clansList)
        {
            <tr>
                <td>@clan.ClanName</td>
                <td>@clan.ID</td>
                <td>
                    <a href="clanUpdate/@clan.ID">Update</a> |
                    <button @onclick="()=>ClanDelete(clan)">Delete</button>
                </td>
            </tr>
        }

    </tbody>
</table>

@code {
    //istansiere Lists
    List<ClanModel> clansList = new();

    /// <summary>
    /// overrider er så vi overskriver dataen hver gang
    /// gør klar til udprint
    /// </summary>
    protected override void OnInitialized()
    {
        //indsæt
        clansList = clan.ReadAllClans();
    }

    /// <summary>
    /// vores knap til at komme hen og indsætte
    /// </summary>
    private void CreateClan()
    {
        //skift vindue
        NavManager.NavigateTo("/clanCreate");
    }

    /// <summary>
    /// vores knap til at slette
    /// </summary>
    /// <param name="clanModel"></param>
    private void ClanDelete(ClanModel clanModel)
    {
        //kør metode
        clan.DeleteClan(clanModel.ID);

        //refresh
        StateHasChanged();
    }

}
